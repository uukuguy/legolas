        {eleveldb, ".*",
         {git, "git://github.com/basho/eleveldb.git", {tag, "1.4.7"}}},
        {sext, ".*",
         {git, "git://github.com/uwiger/sext.git", {tag, "1.1"}}},
        {cowboy, ".*",
         {git, "git://github.com/extend/cowboy.git", {tag, "0.9.0"}}}
       ]}.
